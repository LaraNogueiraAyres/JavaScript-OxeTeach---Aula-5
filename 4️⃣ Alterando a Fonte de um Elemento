<body>
    <p class="texto">Este é um texto de teste.</p>
    <button onclick="alterarFonte()">Mudar Fonte</button>

    <script>
        function alterarFonte()
        {
           let text = document.querySelector(".texto");
           text.style.fontSize = "20px";
           text.style.font = "Arial"
        }
    </script>
</body>
